# Noon E-Commerce Docker Environment
# Copy to .env and fill in values

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_USER=noon_user
POSTGRES_PASSWORD=your_secure_postgres_password
POSTGRES_DB=noon_app

# ClickHouse
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=9000
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=your_secure_clickhouse_password
CLICKHOUSE_DB=noon_intelligence

# JWT
JWT_SECRET=your_very_long_jwt_secret_min_32_chars
JWT_EXPIRY_MINUTES=30
REFRESH_TOKEN_EXPIRY_DAYS=7

# API
API_TOKEN=your_api_token_for_legacy_auth
API_PORT=8096

# Rate Limiting
AUTH_RATE_LIMIT=10/minute
LOGIN_RATE_LIMIT=5/minute

# CORS
CORS_ORIGINS=http://localhost:3001

# Scraper (optional)
SCRAPERAPI_KEY=your_scraperapi_key

# Admin (for initial setup)
ADMIN_EMAIL=admin@noon-intel.local
ADMIN_PASSWORD=your_secure_admin_password
