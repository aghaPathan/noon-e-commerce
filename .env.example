# Noon E-Commerce Environment Configuration
# Copy to .env and fill in values

# ============================================
# PostgreSQL (Primary Database)
# ============================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_USER=noon_user
POSTGRES_PASSWORD=your_secure_postgres_password
POSTGRES_DB=noon_app

# ============================================
# ClickHouse (Price History Analytics)
# ============================================
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=9000
CLICKHOUSE_HTTP_PORT=8123
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=your_secure_clickhouse_password
CLICKHOUSE_DB=noon_intelligence

# ============================================
# JWT Authentication
# ============================================
JWT_SECRET=your_jwt_secret_at_least_32_characters_long
JWT_EXPIRY_MINUTES=30
REFRESH_TOKEN_EXPIRY_DAYS=7

# ============================================
# API Configuration
# ============================================
API_TOKEN=your_api_token_for_legacy_auth
API_PORT=8096

# ============================================
# Rate Limiting
# ============================================
AUTH_RATE_LIMIT=10/minute
LOGIN_RATE_LIMIT=5/minute
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ============================================
# CORS (comma-separated origins)
# ============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================
# Scraper (required for data collection)
# ============================================
SCRAPERAPI_KEY=your_scraperapi_key_here

# ============================================
# Default Admin (for initial setup only)
# ============================================
ADMIN_EMAIL=admin@noon-intel.local
ADMIN_PASSWORD=your_secure_admin_password

# ============================================
# Monitoring (optional)
# ============================================
SLOW_QUERY_THRESHOLD_MS=100
OTEL_ENABLED=false
