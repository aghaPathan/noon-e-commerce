# Noon E-Commerce Environment Configuration
# Copy to .env and fill in values

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=noon_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=noon_app

# ClickHouse (optional - for price history)
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=
CLICKHOUSE_DB=noon_intelligence

# JWT Authentication
JWT_SECRET=your_very_secure_jwt_secret_change_this
JWT_EXPIRY_MINUTES=30
REFRESH_TOKEN_EXPIRY_DAYS=7

# Rate Limiting
AUTH_RATE_LIMIT=10/minute
LOGIN_RATE_LIMIT=5/minute

# Legacy API Token
API_TOKEN=your_api_token
